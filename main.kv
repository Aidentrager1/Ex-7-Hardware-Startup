<MainScreen>:
    #: import time __main__.time
    btn: btn
    name: 'main'
    motor_label: motor_label
    imagebutton: imagebutton
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "motor"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.motor_change()

    DPEAButton:
        id: btn
        text:"0"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.25
        color: 1, 0, 0, 1
        on_press: root.pressed2()

    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    ImageButton:
        id: imagebutton
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.05
        source: 'coolimage.jpeg'
        on_press: root.picture_action()


    Label:
        id: motor_label
        size_hint: None, None
        text: "on"
        font_size: 30
        center_x: root.width * 0.05
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0